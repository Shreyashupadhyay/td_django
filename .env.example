# Production Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# Django Settings
SECRET_KEY=your-secret-key-here-generate-at-djecrety-ir
DEBUG=False
ALLOWED_HOSTS=your-app-name.onrender.com,localhost,127.0.0.1

# Database (PostgreSQL on Render)
# This will be automatically provided by Render when you link a PostgreSQL database
DATABASE_URL=postgresql://user:password@host:port/database

# External API Configuration (optional)
TRUTH_DARE_API_BASE_URL=https://api.truthordarebot.xyz/v1
TRUTH_DARE_API_RATING=pg
